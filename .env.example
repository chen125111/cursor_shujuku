# Application
SECRET_KEY=change-me
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me

# SQLite paths (used when DATABASE_URL is not set)
DATABASE_PATH=gas_data.db
SECURITY_DB_PATH=security.db

# MySQL (optional)
# DATABASE_URL=mysql+pymysql://user:pass@host:3306/database
# SECURITY_DATABASE_URL=mysql+pymysql://user:pass@host:3306/security_db

# Backup
BACKUP_DIR=backups
BACKUP_ENABLED=1

# CORS
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Redis cache (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_PREFIX=gasapp
CACHE_ENABLED=1
CACHE_DEFAULT_TTL=300
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# DB pool and connection tuning (MySQL)
DB_POOL_ENABLED=1
DB_POOL_MAX=10
DB_POOL_MIN=1
DB_POOL_MAX_CACHED=5
DB_CONNECT_TIMEOUT=5
DB_READ_TIMEOUT=10
DB_WRITE_TIMEOUT=10
DB_CONNECT_RETRIES=2
DB_CONNECT_RETRY_DELAY=0.5
